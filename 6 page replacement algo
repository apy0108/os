6 Assignment No. 6
Implement the C program for Page Replacement Algorithms: FCFS, LRU, and Optimal for frame size as minimum three.

#include <stdio.h>
int findLRU(int time[], int n)
 {
    int min = time[0], pos = 0;
    for (int i = 1; i < n; ++i)
 {
        if (time[i] < min) 
{
            min = time[i];
            pos = i;
        }
    }
    return pos;
}
int main() {
    int frames[10], pages[30], temp[10], time[10];
    int n, m, pageFaults = 0, counter = 0, flag1, flag2, i, j, k, pos, max, futureIndex;
    printf("Enter number of pages: ");
    scanf("%d", &n);
    printf("Enter page numbers: ");
    for (i = 0; i < n; ++i)
        scanf("%d", &pages[i]);
    printf("Enter number of frames (min 3): ");
    scanf("%d", &m);

    // -------- FCFS Algorithm --------
    printf("\n--- FCFS Page Replacement ---\n");
    pageFaults = 0;
    for (i = 0; i < m; ++i)
        frames[i] = -1;
    j = 0;
    for (i = 0; i < n; ++i) {
        flag1 = 0;
        for (k = 0; k < m; ++k) {
            if (frames[k] == pages[i]) {
                flag1 = 1;
                break;
            }
        }
        if (flag1 == 0) { // Page Fault
            frames[j] = pages[i];
            j = (j + 1) % m;
            pageFaults++;
        }
        printf("Page %d -> ", pages[i]);
        for (k = 0; k < m; ++k)
            if (frames[k] != -1)
                printf("%d ", frames[k]);
        printf("\n");
    }
    printf("Total Page Faults (FCFS) = %d\n", pageFaults);
    // -------- LRU Algorithm --------
    printf("\n--- LRU Page Replacement ---\n");
    pageFaults = 0;
    for (i = 0; i < m; ++i)
        frames[i] = -1;
    for (i = 0; i < n; ++i) {
        flag1 = flag2 = 0;
        for (j = 0; j < m; ++j) {
            if (frames[j] == pages[i]) { // Page found
                counter++;
                time[j] = counter;
                flag1 = flag2 = 1;
                break;
            }
        }
        if (flag1 == 0) {
            for (j = 0; j < m; ++j) {
                if (frames[j] == -1) {
                    counter++;
                    pageFaults++;
                    frames[j] = pages[i];
                    time[j] = counter;
                    flag2 = 1;
                    break;
                }
            }
        }

        if (flag2 == 0) { // Replace least recently used
            pos = findLRU(time, m);
            counter++;
            pageFaults++;
            frames[pos] = pages[i];
            time[pos] = counter;
        }
        printf("Page %d -> ", pages[i]);
        for (k = 0; k < m; ++k)
            if (frames[k] != -1)
                printf("%d ", frames[k]);
        printf("\n");
    }
    printf("Total Page Faults (LRU) = %d\n", pageFaults);

    // -------- Optimal Algorithm --------
    printf("\n--- Optimal Page Replacement ---\n");
    pageFaults = 0;
    for (i = 0; i < m; ++i)
        frames[i] = -1;
    for (i = 0; i < n; ++i) {
        flag1 = flag2 = 0;
        for (j = 0; j < m; ++j) {
            if (frames[j] == pages[i]) {
                flag1 = flag2 = 1;
                break;
            }
        }
        if (flag1 == 0) {
            for (j = 0; j < m; ++j) {
                if (frames[j] == -1) {
                    pageFaults++;
                    frames[j] = pages[i];
                    flag2 = 1;
                    break;
                }
            }
        }
        if (flag2 == 0) { // Replace future-farthest page
            for (j = 0; j < m; ++j)
                temp[j] = -1;
            for (j = 0; j < m; ++j) {
                for (k = i + 1; k < n; ++k) {
                    if (frames[j] == pages[k]) {
                        temp[j] = k;
                        break;
                    }
                }
            }
           pos = -1;
            max = -1;
            for (j = 0; j < m; ++j) {
                if (temp[j] == -1) { // Not used in future
                    pos = j;
                    break;
                }
                if (temp[j] > max) {
                    max = temp[j];
                    pos = j;
                }
            }
            frames[pos] = pages[i];
            pageFaults++;
        }
       printf("Page %d -> ", pages[i]);
        for (k = 0; k < m; ++k)
            if (frames[k] != -1)
                printf("%d ", frames[k]);
        printf("\n");
    }

    printf("Total Page Faults (Optimal) = %d\n", pageFaults);

    return 0;
}

